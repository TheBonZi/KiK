    private void zmiannaGracza(){        
        if(graczX == true){
            jLabel1.setText("X");
        } else { 
            jLabel1.setText("O");
        }   
        numerRuchu++;
        System.out.println("Numer ruchu: "+numerRuchu);        
    }
    private void test(){
        win();
        graczX = !graczX; 
        zmiannaGracza();
        draw();
    }
    
    private void draw(){
        if(numerRuchu == 9){
            jLabel2.setText("Remis!");
            jDialog.show();
        }
    }
    
    private void reset(){        
        graczX = true;
        for(int i = 0; i < 3; i++){
            for(int j = 0; j < 3; j++){
                plansza[i][j] = null;
            }
        }
        numerRuchu = 0;
        jLabel1.setText("X");
        jButton1.setText("_");
        jButton2.setText("_");
        jButton3.setText("_");
        jButton4.setText("_");
        jButton5.setText("_");
        jButton6.setText("_");
        jButton7.setText("_");
        jButton8.setText("_");
        jButton9.setText("_");
    }
    
    private void win(){
            String gracz;
            if(graczX){
                gracz = "X";
            } else {
                gracz = "O";
            }            

            for(int i = 0; i < 3; i++){
                for(int j = 0; j < 3; j++){
                    System.out.print(plansza[i][j]);
                }
                System.out.println(" ");
            }
            
            // Poziomy
            for(int j = 0; j < 3; j++){
                int i = 0;
                if(plansza[j][i]== gracz && plansza[j][++i] == gracz && plansza[j][++i] == gracz){
                    System.out.println("Win"+  gracz);
                    jDialog.setVisible(true);                    
                    jLabel2.setText("Wygrał gracz: "+  gracz);                   
                }
            }
            // Piony
            for(int j = 0; j < 3; j++){
                int i = 0;
                if(plansza[i][j]== gracz && plansza[++i][j] == gracz && plansza[++i][j] == gracz){
                    System.out.println("Win"+  gracz);
                    jDialog.show();
                    jLabel2.setText("Wygrał gracz: "+  gracz);
                }
            }
            // Skosy
            if(plansza[0][0]== gracz && plansza[1][1] == gracz && plansza[2][2] == gracz){
                System.out.println("Win"+  gracz);
                jDialog.show();
                jLabel2.setText("Wygrał gracz: "+  gracz);
            }
            if(plansza[0][2]== gracz && plansza[1][1] == gracz && plansza[2][0] == gracz){
                System.out.println("Win"+  gracz);
                jDialog.show();
                jLabel2.setText("Wygrał gracz: "+  gracz);
            }    
    }                                  
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         if(jButton1.getText() == "_"){
            if(graczX){
               plansza[0][0]="X";
               jButton1.setText("X"); 
            } else {
                plansza[0][0]="O";
                jButton1.setText("O");
            }   
            test();
        }
    }                                        

